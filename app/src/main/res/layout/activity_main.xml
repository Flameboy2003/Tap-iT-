<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_im"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:src="@drawable/splash_src" />

        <Button
            android:id="@+id/btnOfflineMode"
            android:layout_width="175dp"

            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_1"
            android:fontFamily="@font/poppins_medium"
            android:onClick="startOfflineGame"
            android:text="Play With Friends"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/botPlay"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_2"
            android:fontFamily="@font/poppins_medium"
            android:onClick="withBotPlay"
            android:text="@string/play_with_bot"
            android:textAllCaps="false"
            android:textColor="#FF3D00" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>